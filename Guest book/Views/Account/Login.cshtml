@model Guest_book.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Logon</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="mytext-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Войти" class="btn btn-primary mybtn" />
                <a class="navbar-brand btn btn-primary mybtn" asp-area="" asp-controller="Account" asp-action="Registration">Регистрация</a>
                <a class="navbar-brand btn btn-primary mybtn" asp-area="" asp-controller="Home" asp-action="Index">Войти как гость</a>
            </div>
        </form>
        
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}